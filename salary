#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t; 
	cin>>t; 
	while(t--)
	{
	 int n,sum=0,m=10002; 
	 cin>>n; 
	 int w[n];
	 for(int i=0;i<n; i++)
	 {
	     cin>>w[i];
	     sum+=w[i];
	     if(w[i]<m) 
	      m=w[i];
	 }
	 cout<<sum-(n*m)<<endl; 
	}
	return 0;
}
